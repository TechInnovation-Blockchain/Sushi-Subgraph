{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "app/components": ["components/index.js"],
      "app/core": ["core/index.js"],
      "app/utils": ["utils/timestamps.js"],
      "app/theme": ["theme/index.js"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
